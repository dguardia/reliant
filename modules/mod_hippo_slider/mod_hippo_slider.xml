      <fieldset name="slider1" label="Slider 1">

       <field
        name="dir"
        type="hippomkdir" />

        <field
          name="backgroundtype_1"
          type="radio"
          class="btn-group btn-group-yesno"
          label="Background Type"
          description="Choose slider background type"
          default="image">
          <option value="image">Image</option>
          <option value="video">Video</option>
        </field>
        
        <field 
          name="backgroundimage_1" 
          type="media"
          label="Background Image" 
          description="Select Backgound Image" />

          
          <field 
            name="backgroundvideomp4_1" 
            type="filelist" 
            default="" 
            label="MP4 video " 
            description="Select Mp4 video file" 
            directory="images/mod_hippo_slider" 
            exclude="" 
            filter="\.mp4$"
            stripext="" />


            <field 
              name="backgroundvideowebm_1" 
              type="filelist" 
              default="" 
              label="Webm video " 
              description="Select webm video file" 
              directory="images/mod_hippo_slider" 
              filter="\.webm$" 
              exclude="" 
              stripext="" />

              <field 
                name="backgroundvideoogv_1" 
                type="filelist" 
                default="" 
                label="OGV video " 
                description="Select ogv video file" 
                directory="images/mod_hippo_slider" 
                filter="\.ogv$" 
                exclude="" 
                stripext="" />

                <field 
                  name="sliderdata_1" 
                  label ="Slider Contents" 
                  description="Slider Contents" 
                  type="editor" 
                  width="400" 
                  filter="safehtml" />


                </fieldset>


